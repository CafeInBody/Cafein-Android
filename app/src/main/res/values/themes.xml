<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CaffeInBody" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:buttonStyle">@style/basic_16dp</item>
        <item name="android:editTextStyle">@style/basic_16dp</item>
        <item name="android:radioButtonStyle">@style/basic_16dp</item>
        <item name="android:checkboxStyle">@style/basic_16dp</item>
        <item name="android:textViewStyle">@style/basic_16dp</item>
        <!-- Customize your theme here. -->
    </style>
</resources>
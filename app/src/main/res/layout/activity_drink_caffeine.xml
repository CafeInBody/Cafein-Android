<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/design_default_color_background"
    android:gravity="center_horizontal">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:minHeight="?attr/actionBarSize"
        android:paddingTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageViewDrink"
        android:layout_width="247dp"
        android:layout_height="244dp"
        android:layout_weight="0"
        android:src="@drawable/coffee_sample" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사이즈"
        android:layout_marginLeft="20dp"
        android:layout_gravity="start"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginHorizontal="30dp"

        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/size1"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@drawable/btn_select"
            android:button="@null"
            android:drawableBottom="@drawable/icon_coffee"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingBottom="30dp"
            android:text="Regular" />

        <RadioButton
            android:id="@+id/size2"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/btn_select"
            android:button="@null"
            android:drawableBottom="@drawable/icon_coffee"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingBottom="30dp"
            android:text="Grande" />

        <RadioButton
            android:id="@+id/size3"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@drawable/btn_select"
            android:button="@null"
            android:drawableBottom="@drawable/icon_coffee"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingBottom="30dp"
            android:text="Venti" />


    </RadioGroup>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마신 용량"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <abak.tr.com.boxedverticalseekbar.BoxedVertical
            android:id="@+id/volume"
            android:layout_width="300dp"
            android:layout_height="160dp"
            android:src="@drawable/heart"
            app:backgroundColor="#EDF5F5"
            app:cornerRadius="20dp"
            app:defaultValue="100"
            app:imageEnabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:max="100"
            app:progressColor="#6AA7A3"
            app:step="5"
            app:textBottomPadding="50"
            app:textColor="#FF0000"
            app:textEnabled="true"
            app:textSize="12sp"
            app:touchDisabled="true" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/heartback"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:tint="@color/design_default_color_background" />

    </androidx.constraintlayout.widget.ConstraintLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카페인 함량"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="25dp"/>

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100mg"
            android:layout_marginLeft="200dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_weight="0"
        android:text="확인"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        android:background="@drawable/roundcorner_rectangle"/>
</LinearLayout>
    </ScrollView>
</LinearLayout>
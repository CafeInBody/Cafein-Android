<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="3dp"
        android:layout_marginBottom="5dp"
        android:elevation="0dp"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:id="@+id/card_caffeine"
        app:cardCornerRadius="5dp"
        android:padding="0dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

            <ImageView
                android:id="@+id/img_caffeine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_margin="0dp"
                android:layout_gravity="center"
         />
        <ImageView
            android:id="@+id/logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"

            android:layout_margin="0dp"
            android:layout_gravity="center"
            />

        <ToggleButton
            android:id="@+id/star"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:layout_margin="4dp"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/star_item_btn"
            android:layout_gravity="top|end
"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/caffeine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|start"
            app:cardBackgroundColor="#F8786F"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            >
            <TextView
                android:id="@+id/caf_name"
                style="@style/bold_12dp"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="100mg"/>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아메리카노"
            android:gravity="center"
            android:textColor="#666666"
            android:layout_marginTop="8dp"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_caffeine" />

        <TextView
            android:id="@+id/txt_caffeine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="100mg"
            style="@style/bold_14dp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_servey3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="평소 카페인을 섭취했을 때 어땠는지 알려주세요"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressTint="#D5F8786F"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/textView_servey3_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="카페인을 섭취한 후 심장이 빨리 뛴 적이 있나요?" />

        <RadioGroup
            android:id="@+id/heartFastLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/btn_select"
                android:gravity="center"
                android:textColor="@drawable/txt_color"
                android:text="네" />

            <RadioButton
                android:checked="true"
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/btn_select"
                android:textColor="@drawable/txt_color"
                android:text="아니오" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView_servey3_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="0"
            android:text="카페인을 섭취한 후 두통을 느낀 적이 있나요?" />

        <RadioGroup
            android:id="@+id/headacheLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_select"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/txt_color"
                android:text="네" />

            <RadioButton
                android:checked="true"
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_select"
                android:button="@null"
                android:gravity="center"
                android:textColor="@drawable/txt_color"
                android:text="아니오" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView_servey3_4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="0"
            android:text="그 당시 어느 정도 마셨나요?" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0"
            android:max="300"
            android:progress="100"
            android:theme="@style/SeekBarColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_servey3_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_weight="0"
                android:text="100mg" />

            <TextView
                android:id="@+id/textView_servey3_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_weight="0"
                android:text="200mg" />

            <TextView
                android:id="@+id/textView_servey3_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_weight="0"
                android:text="300mg+" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-40dp">

        <Button
            android:id="@+id/button5"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:gravity="center"
            style="@style/basic_16dp"
            android:background="@color/white"
            android:text="건너뛰기" />

        <Button
            android:id="@+id/button_next"
            android:layout_width="170dp"
            android:layout_height="50dp"
            style="@style/bold_16dp"
            android:background="#9D5812"
            android:gravity="center"
            android:text="다음"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
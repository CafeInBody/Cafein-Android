<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CaffeineListActivity"
>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:minHeight="?attr/actionBarSize"
        android:paddingTop="15dp"
        android:paddingEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
>
        <LinearLayout
            android:id="@+id/coffee_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:clipToPadding="false"
            android:padding="10dp"
            >
            <RadioGroup
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/coffee_brand_btn"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:civ_border_color="#F8786F"
                    android:button="@null"
                    android:drawableTop="@drawable/hollys_custom"
                    android:id="@+id/starbucks"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/starbucks_logo"/>
                <RadioButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:civ_border_color="#F8786F"
                    android:button="@null"
                    android:drawableTop="@drawable/hollys_custom"
                    android:id="@+id/ediya"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/ediya_logo"/>
                <RadioButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/twosome"
                    android:button="@null"
                    android:drawableTop="@drawable/hollys_custom"
                    app:civ_border_color="#F8786F"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/twosome_logo"/>
                <RadioButton
                    android:clipToOutline="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:civ_border_color="#F8786F"
                    android:id="@+id/hollys"
                    android:button="@null"
                    android:drawableTop="@drawable/hollys_custom"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/hollys_logo"
                    />
                <RadioButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/paiks"
                    android:button="@null"
                    android:drawableTop="@drawable/hollys_custom"
                    app:civ_border_color="#F8786F"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/paiks_logo"/>
                <RadioButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/theventi"
                    android:button="@null"
                    android:drawableTop="@drawable/hollys_custom"
                    app:civ_border_color="#F8786F"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/theventi_logo"/>
                <RadioButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/gongcha"
                    android:button="@null"
                    android:drawableTop="@drawable/hollys_custom"
                    app:civ_border_color="#F8786F"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/gongcha_logo"/>
            </RadioGroup>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/caffein_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="20dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/item_caffeine" />

</LinearLayout>